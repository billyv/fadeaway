<body class="grad1">
  <div class="container grad1">

    <h1 class="text-center title">Fadeaway</h1>

    <form class="form-signin" action='/login' method='POST'>
      <h2 class="form-signin-heading login">Please sign in</h2>
      <label for="inputName" class="sr-only">Username</label>
      <input type="username" id="inputName" class="form-control" name="name" placeholder="Username" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
      <button class="btn btn-lg btn-primary btn-block login-btn" type="submit">Sign in</button>
    </form>

    <form class="form-signin" action='/new_user' method='POST'>
      <h2 class="form-signin-heading login">Register</h2>
      <label for="newName" class="sr-only">Username</label>
      <input type="username" id="newName" class="form-control" name="name" placeholder="Username" required autofocus>
      <label for="newPassword" class="sr-only">Password</label>
      <input type="password" id="newPassword" class="form-control" name="password" placeholder="Password" required style="margin-bottom:-1px">
      <input type="password" id="newPassword" class="form-control" name="password_confirmation" placeholder="Password Confirmation" required>
      <button class="btn btn-lg btn-primary btn-block login-btn" type="submit">Register</button>
    </form>

  </div> <!-- /container -->

  <link href='http://fonts.googleapis.com/css?family=Raleway+Dots' rel='stylesheet' type='text/css'>

</body>
