<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center" id="test"><%= @user.name %>'s Friends</h1>
    </div>
  </div>

  <div class="row lg-spacer">
  </div>

  <% @friends.each_slice(3) do |three_friends| %>
  <div class="row" name="friend-grid">
    <% three_friends.each do |friend| %>
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-2 no-gutter">
          <a href='/<%= friend.id %>/delete' class="btn btn-xl btn-default btn-block"><span class="glyphicon glyphicon-remove"> </span></a>
        </div>
        <div class="col-md-10 no-gutter">
          <a href='/<%= friend.id %>' data-last-contacted="<%= friend.last_contacted_milli %>" class="fadefriend btn btn-default btn-xl btn-block"><%= friend.name %></a>
          <br />
        </div>
      </div>
    </div>
    <% end %>
  </div> <!-- /row friend-grid -->
  <% end %>


  <div class="row lg-spacer">
    <div class="col-md-4">
      <form class="form-inline" role="form" action='/new_friend' method='POST'>
        <label for="friend">New Friend</label>
        <input type="text" class="form-control" id="name" name="name">
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div> <!-- /row -->

  <div class="row md-spacer">
    <div class="col-md-4">
      <a href="/logout">logout</a>
    </div>
  </div>

</div> <!-- /container -->

<script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>
<script type="text/javascript" src="js/coloring.js" defer></script>
